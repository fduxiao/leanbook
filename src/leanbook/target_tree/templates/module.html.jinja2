{% extends "base.html.jinja2" %}
{% block base_path %}..{% endblock %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
    <div class="sidebar">
        <ul>
            {% for x in toc %}
                {% if x[0] <= 2 %}
                    <li><a href="#{{ x[2] }}">{{ x[1] }}</a></li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>
    <div class="main"> {{ body }} </div>
{% endblock %}

